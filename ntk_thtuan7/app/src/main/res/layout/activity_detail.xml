<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0E9ED6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail">



    <ImageView
        android:id="@+id/backdetail"
        android:layout_width="47dp"
        android:layout_height="37dp"
        android:src="@drawable/ic_back" />


    <TextView
        android:id="@+id/textViewFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Ten Friend"
        android:textColor="#ff00"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textviewMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFriend"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Mo ta"
        android:textColor="#002AFF"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imageviewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="75dp"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/imgChat"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:src="@drawable/ic_chat" />

    <ImageView
        android:id="@+id/imgPhone"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="135dp"
        android:layout_toRightOf="@+id/textviewMoTa"
        android:src="@drawable/ic_phone" />


</RelativeLayout>